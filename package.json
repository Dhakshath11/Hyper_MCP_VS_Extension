{
  "name": "hyperex",
  "displayName": "Hyper MCP Server",
  "description": "MCP server for HyperExecute â€” run and control directly from VS Code",
  "version": "0.0.1",
  "publisher": "dhakshathamin",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
   "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hyperEx.startServer",
        "title": "Start Hyper MCP Server"
      },
      {
        "command": "hyperEx.stopServer",
        "title": "Stop Hyper MCP Server"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "bundle:mcp": "node scripts/bundle-mcp.js",
    "link:mcp": "cd mcp-server && npm link",
    "build:full": "npm run bundle:mcp && npm run compile && npm run link:mcp",
    "vscode:prepublish": "npm run build:full",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.9.3"
  }
}