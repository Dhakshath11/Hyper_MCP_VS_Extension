  "repository": {
    "type": "git",
    "url": "https://github.com/Dhakshath11/Hyper_MCP_VS_Extension.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hyperEx.createServerConfig",
        "title": "Create HyperX Server (mcp.json)"
      }
